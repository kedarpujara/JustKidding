{
  "expo": {
    "name": "JustKidding",
    "slug": "justkidding",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "justkidding",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.justkidding.app",
      "infoPlist": {
        "NSCameraUsageDescription": "JustKidding needs camera access for video consultations with doctors.",
        "NSMicrophoneUsageDescription": "JustKidding needs microphone access for video consultations with doctors.",
        "NSPhotoLibraryUsageDescription": "JustKidding needs photo library access to upload medical documents.",
        "UIBackgroundModes": [
          "remote-notification",
          "voip"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.justkidding.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow JustKidding to access your camera for video consultations."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow JustKidding to access your photos to upload medical documents."
        }
      ],
      "expo-asset",
      "expo-font",
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#4F46E5"
    }
  }
}
